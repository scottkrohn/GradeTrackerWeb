@{
    ViewBag.Title = "Home Page";
    ViewBag.ApplicationName = "Personal Gradebook";
    }

<div class="jumbotron">
    <p class="lead">@ViewBag.Applicationname is a <strong>free</strong> grade tracking application for students.</p>
    <a href="@Url.Action("LearnMore", "Home")" class="btn btn-primary">Learn More</a>
    <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Create Account</a>
</div>

<div class="row">
    <div class="col-md-4 text-center">
        <h3>Grade Tracking</h3>
        <h5>Track your assignments, exams, projects and grades for each course.</h5>
    </div> <!-- END "col-md-4" -->

    <div class="col-md-4 text-center">
        <h3><a href="@Url.Action("FinalGradeCalculator", "Home")">Final Grade Calculator</a></h3>
        <h5>Calculate the grades you need on your finals to pass your classes.</h5>
    </div> <!-- END "col-md-4" -->

    <div class="col-md-4 text-center">
        <h3>Detailed Grade Information</h3>
        <h5>Set up grade weight categories for accurate weighted grade calculation.</h5>
    </div> <!-- END "col-md-4" -->

 </div> <!-- END "row" -->
